{
    "compilerOptions": {
        "composite": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "isolatedModules": true,
        "lib": [
            "es2022"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2022",
        "customConditions": [
            "@omni-box/source"
        ],
        "paths": {
            "@omni-box/sys-core*": [
                "libs/sys-core/src/*"
            ],
            "@omni-box/sys-shared*": [
                "libs/sys-shared/src/*"
            ],
            "@omni-box/draw*": [
                "libs/draw/src/*"
            ]
        },
    }
}
